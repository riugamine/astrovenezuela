# =================================================================
# PRODUCTION ENVIRONMENT TEMPLATE
# Use this for production deployment at www.astrovenezuela.com
# Store these variables securely in your deployment platform
# =================================================================

# Environment
NODE_ENV=production

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://www.astrovenezuela.com

# Supabase Configuration (Production project)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_supabase_service_role_key

# OAuth Security (Generate NEW secrets for production - different from dev)
OAUTH_STATE_SECRET=generate_new_production_secret_crypto_randombytes_32_hex

# Google Services (Production)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Production Security Settings
DEBUG_MODE=false
LOGGING_LEVEL=error

# Security Settings (Generate STRONG production secrets)
SESSION_SECRET=generate_strong_production_session_secret_64_hex
ENCRYPTION_KEY=generate_strong_production_encryption_key_32_hex

# Payment Processing (LIVE keys for production)
STRIPE_PUBLIC_KEY=pk_live_your_stripe_live_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_live_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret

# Analytics (Production)
GOOGLE_ANALYTICS_ID=G-YOUR_PRODUCTION_GA_ID
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# CDN and Performance
NEXT_PUBLIC_CDN_URL=https://cdn.astrovenezuela.com

# Rate Limiting (Stricter for production)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Feature Flags (Production)
FEATURE_ADMIN_PANEL=true
FEATURE_ANALYTICS=true
FEATURE_BETA_FEATURES=false

# Monitoring (Production)
SENTRY_DSN=your_sentry_dsn_for_error_tracking
ENABLE_PERFORMANCE_MONITORING=true

# Security Headers (Production)
STRICT_TRANSPORT_SECURITY=max-age=31536000; includeSubDomains
CONTENT_SECURITY_POLICY=strict 